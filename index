<script>
const meals = [
  {
    name: "Chicken Fajitas",
    category: ["quick","takeaway"],
    ingredients: ["Chicken breast","Bell peppers","Onion","Fajita seasoning","Tortilla wraps","Sour cream","Cheese"]
  },
  {
    name: "Beef Burger & Fries",
    category: ["comfort","takeaway"],
    ingredients: ["Beef mince","Burger buns","Cheddar cheese","Lettuce","Tomato","Potatoes","Burger sauce"]
  },
  {
    name: "Creamy Garlic Chicken Pasta",
    category: ["comfort"],
    ingredients: ["Chicken breast","Pasta","Garlic","Double cream","Parmesan","Spinach"]
  },
  {
    name: "Chicken Tikka Masala",
    category: ["takeaway"],
    ingredients: ["Chicken","Tikka paste","Passata","Cream","Rice","Garlic","Onion"]
  },
  {
    name: "Veggie Stir Fry",
    category: ["healthy","quick"],
    ingredients: ["Mixed vegetables","Soy sauce","Garlic","Ginger","Egg noodles","Sesame oil"]
  },
  {
    name: "Beef Tacos",
    category: ["takeaway","quick"],
    ingredients: ["Beef mince","Taco seasoning","Taco shells","Cheese","Lettuce","Salsa"]
  },
  {
    name: "Chicken & Rice Bowl",
    category: ["healthy"],
    ingredients: ["Chicken","Rice","Broccoli","Soy sauce","Honey","Garlic"]
  },
  {
    name: "Cheese & Tomato Pasta Bake",
    category: ["comfort"],
    ingredients: ["Pasta","Tomato sauce","Mozzarella","Cheddar","Garlic","Onion"]
  }
];

function spinMeal() {
  const filters = [];
  if (quick.checked) filters.push("quick");
  if (healthy.checked) filters.push("healthy");
  if (takeaway.checked) filters.push("takeaway");
  if (comfort.checked) filters.push("comfort");

  let filteredMeals = meals;
  if (filters.length > 0) {
    filteredMeals = meals.filter(m => filters.every(f => m.category.includes(f)));
  }

  if (filteredMeals.length === 0) {
    spinner.innerText = "No meals match your filters ğŸ˜­";
    mealCard.style.display = "none";
    return;
  }

  spinner.innerText = "Spinning... ğŸ¡";

  setTimeout(() => {
    const meal = filteredMeals[Math.floor(Math.random() * filteredMeals.length)];
    spinner.innerText = `ğŸ½ï¸ ${meal.name}`;

    mealName.innerText = meal.name;
    mealCat.innerText = meal.category.join(", ");

    ingredients.innerHTML = "";
    meal.ingredients.forEach(i => {
      const li = document.createElement("li");
      li.innerText = i;
      ingredients.appendChild(li);
    });

    mealCard.style.display = "block";
  }, 800);
}
</script>

